{
  "name": "@brius/migration-tool",
  "version": "1.0.0",
  "description": "TypeScript migration tool for legacy Django to Supabase AI-ready architecture",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "migration-tool": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "cli": "ts-node src/cli/index.ts",
    "cli:build": "tsc && chmod +x dist/cli/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist",
    "migrate": "ts-node src/index.ts",
    "validate": "ts-node scripts/validate-migration.ts"
  },
  "keywords": [
    "migration",
    "typescript",
    "supabase",
    "django",
    "database",
    "ai",
    "embeddings"
  ],
  "author": "Brius Team",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "commander": "^14.0.0",
    "dotenv": "17.0.1",
    "pg": "^8.11.3",
    "winston": "^3.17.0",
    "zod": "^3.25.73"
  },
  "devDependencies": {
    "@types/jest": "30.0.0",
    "@types/node": "24.0.10",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "8.35.1",
    "@typescript-eslint/parser": "8.35.1",
    "eslint": "9.30.1",
    "jest": "30.0.4",
    "rimraf": "6.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/brius/migration-tool.git"
  },
  "bugs": {
    "url": "https://github.com/brius/migration-tool/issues"
  },
  "homepage": "https://github.com/brius/migration-tool#readme"
}
